{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "incremental": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "paths": {
      "@backend/*": ["./apps/backend/src/*"],
      "@frontend/*": ["./apps/frontend/src/*"],
      "@shared/*": ["./packages/shared/src/*"]
    },
  },
  "exclude": ["node_modules", "dist"]
}


